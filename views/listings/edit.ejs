<%- layout("/layouts/boilerplate") %>
    <div class="row">
        <div class="col-md-8 mx-auto">
            <h3 class="heading">Edit Listing Detail</h3>
            <form action="/listings/<%= listing._id%>?_method=PUT" method="POST" class="needs-validation" novalidate
                enctype="multipart/form-data">
                <div class="row margin_bottom">
                    <div class="col-md-12">
                        <label for="title" class="form-label margin_bottom fw-bold">Title</label>
                        <input type="text" class="form-control" name="listing[title]" value="<%= listing.title %>"
                            required>
                        <div class="valid-feedback">Looks Good!</div>
                    </div>
                </div>

                <div class="row margin_bottom">
                    <div class="col-md-12">
                        <label for="Description" class="form-label margin_bottom fw-bold">Description</label>
                        <textarea type="text" class="form-control" name="listing[description]"
                            required><%= listing.description %></textarea>
                        <div class="invalid-feedback">Required input field</div>
                    </div>
                </div>

                <div class="row margin_bottom">
                    <img src="<%= changedImageUrl %>" alt="">
                </div>

                <div class="row margin_bottom">
                    <div class="col-md-12">
                        <label for="image" class="form-label margin_bottom fw-bold">Upload New Image</label>
                        <input type="file" class="form-control" name="listing[image]">
                    </div>
                </div>
                <div class="row margin_bottom">
                    <div class="col-md-12">
                        <label for="price" class="form-label margin_bottom fw-bold">Price</label>
                        <input type="number" class="form-control" name="listing[price]" value="<%= listing.price %>"
                            required>
                        <div class="invalid-feedback">Required input field</div>
                    </div>
                </div>
                <div class="row margin_bottom">
                    <div class="col-md-4">
                        <label for="location" class="form-label margin_bottom fw-bold">Location</label>
                        <input type="text" class="form-control" name="listing[location]" value="<%= listing.location %>"
                            required>
                        <div class="invalid-feedback">Required input field</div>
                    </div>
                    <div class="col-md-8">
                        <label for="country" class="form-label margin_bottom  fw-bold">Country</label>
                        <input type="text" class="form-control" name="listing[country]" value="<%= listing.country %>"
                            required>
                        <div class="invalid-feedback">Required input field</div>
                    </div>
                </div>
                <button class="btn add_btn">Edit</button>
            </form>
        </div>
    </div>