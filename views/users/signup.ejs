<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-md-6 mx-auto">
        <h3 class="heading">SignUp with us</h3>
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="row margin_bottom">
                <div class="col-md-12">
                    <label for="username" class="form-label margin_bottom">Username</label>
                    <input type="text" id="username" class="form-control" name="username" placeholder="Enter Username" required>
                    <div class="valid-feedback">Looks Good!</div>
                </div>
            </div>

            <div class="row margin_bottom">
                <div class="col-md-12">
                    <label for="email" class="form-label margin_bottom">Email</label>
                    <input type="email" id="email" class="form-control" name="email" placeholder="e.g. abc@gmail.com">
                    <div class="invalid-feedback">Required input field</div>
                </div>
            </div>
            <div class="row margin_bottom">
                <div class="col-md-12">
                    <label for="password" class="form-label margin_bottom" >Password</label>
                    <input type="password" id="password" class="form-control" name="password" required>
                    <div class="invalid-feedback">Required input field</div>
                </div>
            </div>
            <button class="btn btn-outline-success">SignUp</button>
        </form>
    </div>
</div>